<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_margin="8dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:paddingBottom="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/teamLogo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/team_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/team_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inter_semibold"
                android:text="TextView"
                android:textColor="@color/PrimaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/teamLogo"
                app:layout_constraintEnd_toStartOf="@+id/fav_check"
                app:layout_constraintStart_toEndOf="@+id/teamLogo"
                app:layout_constraintTop_toTopOf="@+id/teamLogo"
                app:layout_constraintVertical_bias="0.421" />

            <TextView
                android:id="@+id/short_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/team_name"
                app:layout_constraintTop_toBottomOf="@+id/team_name" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Founded:"
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/short_name_txt"
                app:layout_constraintTop_toTopOf="@+id/short_name_txt" />

            <TextView
                android:id="@+id/founded_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1997"
                android:fontFamily="@font/inter_semibold"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Info"
                android:fontFamily="@font/inter_medium"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/teamLogo"
                app:layout_constraintTop_toBottomOf="@+id/teamLogo" />

            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/DividerColor"
                app:layout_constraintEnd_toEndOf="@+id/team_name"
                app:layout_constraintStart_toStartOf="@+id/teamLogo"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Email:"
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Phone:"
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/email_txt" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Address: "
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/phone_txt" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Website:"
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/addr_txt" />

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:text="Name"
                android:textAlignment="textEnd"
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp"
                android:autoLink="email"
                android:textColor="@color/blue200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="TextView"
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="@+id/email_txt"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/email_txt" />

            <TextView
                android:id="@+id/addr_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="TextView"
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="@+id/phone_txt"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/phone_txt" />

            <TextView
                android:id="@+id/we_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="TextView"
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp"
                android:textAlignment="textEnd"
                android:linksClickable="true"
                android:autoLink="all"
                app:layout_constraintEnd_toEndOf="@+id/addr_txt"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/addr_txt" />

            <CheckBox
                android:id="@+id/fav_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-16dp"
                android:button="@drawable/fav_btn_selector"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="@+id/team_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/team_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>